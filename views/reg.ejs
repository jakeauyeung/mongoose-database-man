<% include header %>
    <div class="login-panel">
    <h4><i class="fa fa-cog fa-spin"></i>&nbsp;<%= title %></h4>
		    <form class="pure-form pure-form-aligned" method="post">
		    <fieldset>
		        <div class="pure-control-group">
		            <label for="name">用户名：</label>
		            <input id="name" name="name" type="text" placeholder="用户名">
		        </div>

		        <div class="pure-control-group">
		            <label for="password">密码：</label>
		            <input id="password" name="password" type="password" placeholder="密码">
		        </div>

		        <div class="pure-control-group">
		            <label for="passwordRepeat">确认密码：</label>
		            <input id="passwordRepeat" name="password-repeat" type="password" placeholder="确认密码">
		        </div>

		        <div class="pure-control-group">
		            <label for="email">邮箱：</label>
		            <input id="email" name="email" type="text" placeholder="邮箱">
		        </div>

		        <div class="pure-controls">
		            <button type="submit" class="pure-button pure-button-primary"><i class="fa fa-user"></i>&nbsp;注册</button>
		        </div>
		    </fieldset>
		</form>
    </div>
    <style>
    .login-panel{
				width: 640px;
				height: 400px;
				position:absolute;  
				left:50%;  
				top:50%;  
				margin:-200px 0 0 -320px;
				border-radius: 10px;
				-moz-border-radius: 10px;
				-webkit-border-radius: 10px;
				background-color:rgba(0,0,0,0.45);
				color: #fff;
			}
    </style>
<% include footer %>